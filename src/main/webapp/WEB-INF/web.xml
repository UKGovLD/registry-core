<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>LD Registry</display-name>

  <filter>
    <filter-name>CORS</filter-name>
    <filter-class>com.epimorphics.appbase.webapi.CorsFilter</filter-class>
    <init-param>
      <param-name>cors.allowed.methods</param-name>
      <param-value>GET,POST,HEAD,OPTIONS,PUT,DELETE,PATCH</param-value>
    </init-param>
    <init-param>
      <param-name>cors.allowed.headers</param-name>
      <param-value>Origin,Accept,X-Requested-With,Content-Type,Access-Control-Request-Method,Access-Control-Request-Headers,authorization</param-value>
    </init-param>
    <init-param>
      <param-name>cors.exposed.headers</param-name>
      <param-value>Location,Date</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CORS</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>ShiroFilter</filter-name>
    <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
  </filter>

  <filter>
    <filter-name>Jersey Web Application</filter-name>
    <filter-class>org.glassfish.jersey.servlet.ServletContainer</filter-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>com.epimorphics.registry.webapi</param-value>
    </init-param>
    <init-param>
        <param-name>jersey.config.server.provider.classnames</param-name>
        <param-value>com.epimorphics.webapi.marshalling.TurtleMarshaller,com.epimorphics.webapi.marshalling.RDFXMLMarshaller,com.epimorphics.registry.webapi.RdfXmlRorMarshaller,org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.servlet.filter.forwardOn404</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>VelocityFilter</filter-name>
    <filter-class>com.epimorphics.appbase.webapi.VelocityFilter</filter-class>
  </filter>

  <!-- Most security is done at the Jersey resource level not here -->
  <filter-mapping>
    <filter-name>ShiroFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>Jersey Web Application</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>VelocityFilter</filter-name>
    <url-pattern>/ui/*</url-pattern>
  </filter-mapping>
 
  <context-param>
    <param-name>AppConfig.app</param-name>
    <!-- Will initialize from first of these it finds -->
    <param-value>/opt/{context}/config/app.conf,/opt/ldregistry/config/app.conf,{webapp}/WEB-INF/app.conf,/etc/ldregistry/app.conf</param-value>
  </context-param>
  
  <context-param>
    <param-name>registry-file-root</param-name>
    <param-value>/opt/ldregistry</param-value>
  </context-param>
  
  <listener>
    <listener-class>com.epimorphics.registry.core.RegistryDirBootstrap</listener-class>
  </listener>

  <listener>
    <listener-class>com.epimorphics.appbase.core.AppConfig</listener-class>
  </listener>
 
  <listener>
      <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
  </listener>

  <session-config>
    <!-- web.xml expects the session timeout in minutes: -->
    <session-timeout>30</session-timeout>
  </session-config>

    <servlet>
        <servlet-name>sparql</servlet-name>
        <servlet-class>org.apache.jena.fuseki.servlets.SPARQL_QueryDataset</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sparql</servlet-name>
        <url-pattern>/system/query</url-pattern>
    </servlet-mapping>

<!--
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    -->

</web-app>
